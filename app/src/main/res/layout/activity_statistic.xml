<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistic"
    android:background="#131313">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/nav_bar_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#131313"
            app:popupTheme="@style/ThemeOverlay.AppCompat">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_below="@+id/nav_bar_statistic"
        android:id="@+id/login_time"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập lúc "
            android:textColor="@color/info_title"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txtLoginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:40"
            android:textColor="@color/info_value"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/login_time"
        android:id="@+id/counter_time"
        android:paddingHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian làm việc (hiện tại)"
            android:textColor="@color/info_title"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txtAccumTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00"
            android:textColor="@color/info_value"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/counter_time"
        android:id="@+id/title_mChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:textStyle="italic"
        android:textColor="@color/info_value"
        android:textSize="16sp"
        />
    <com.github.mikephil.charting.charts.CombinedChart
        android:layout_below="@+id/title_mChart"
        android:id="@+id/combinedChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="8dp"
        />

    <TextView
        android:layout_below="@+id/combinedChart"
        android:id="@+id/title_bChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian đã làm trong tuần"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:textStyle="italic"
        android:textColor="@color/info_value"
        android:textSize="16sp"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_below="@+id/title_bChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="8dp"/>

    <LinearLayout
        android:layout_below="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingHorizontal="8dp">
        <RelativeLayout
            android:id="@+id/info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức lương ( /1h )"
                android:textColor="@color/info_title"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000 VNĐ"
                android:textColor="@color/info_value"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoa hồng (%)"
                android:textColor="@color/info_title"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textColor="@color/info_value"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập tháng (hiện tại)"
                android:textColor="@color/info_title"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,678,000 VNĐ"
                android:textColor="@color/info_value"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>